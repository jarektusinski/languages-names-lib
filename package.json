{
  "name": "languages-names-lib",
  "version": "1.0.0",
  "description": "TypeScript/JavaScript library with 230+ language names in English and in their native script (e.g. 日本語, Polski, العربية). Includes bidirectional maps and typed constants and language selectors.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts --clean",
    "prepublishOnly": "npm run build",
    "test": "jest",
    "lint": "eslint src tests --ext .ts",
    "lint:fix": "eslint src tests --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\" \"tests/**/*.ts\""
  },
  "keywords": [
    "languages",
    "language-names",
    "native-names",
    "internationalization",
    "localization",
    "locale",
    "translation",
    "language-selector",
    "typescript",
    "constants",
    "language-list",
    "endonym",
    "exonym"
  ],
  "author": "Jarosław Tusiński",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "prettier": "^3.2.5",
    "ts-jest": "^29.1.2",
    "tsup": "^8.5.1",
    "typescript": "^5.3.3"
  },
  "files": [
    "dist",
    "src"
  ],
  "publishConfig": {
    "access": "public"
  }
}
